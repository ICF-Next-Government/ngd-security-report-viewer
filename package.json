{
  "name": "ngd-security-report-viewer",
  "private": true,
  "version": "2.1.0",
  "type": "module",
  "description": "A modern, interactive security report viewer and static HTML generator for SARIF, Semgrep, and GitLab SAST JSON files",
  "keywords": [
    "security",
    "sarif",
    "semgrep",
    "gitlab-sast",
    "gitleaks",
    "vulnerability",
    "report-viewer",
    "static-site-generator"
  ],
  "author": "NGD Security Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ngd-security-report-viewer.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && bun run inject-fonts",
    "build:fast": "vite build",
    "inject-fonts": "bun run scripts/inject-fonts.ts",
    "lint": "bunx @biomejs/biome lint .",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "caniuse-lite": "^1.0.30001727",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.344.0",
    "motion": "^12.23.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.2.17",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.18",
    "esbuild": "^0.19.11",
    "jsdom": "^26.1.0",
    "lefthook": "^1.12.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
